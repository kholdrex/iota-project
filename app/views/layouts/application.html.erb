<body id="login-page-full" style="background: url(/assets/bg.jpg);">
<div id="login-full-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div id="login-box">
          <div class="row">
            <div class="col-xs-12">
              <header id="login-header">
                <div id="login-logo"  style="background: #ffffff; padding: 0px;">
                  <img src="/assets/logo.gif" alt=""  style="height: 140px;"/>
                </div>
              </header>
              <div id="login-box-inner">
                <form role="form" action="index.html">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input class="form-control" type="text" placeholder="Email адрес">
                  </div>
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key"></i></span>
                    <input type="password" class="form-control" placeholder="Пароль">
                  </div>
                  <div id="remember-me-wrapper">
                    <div class="row">
                      <div class="col-xs-6">
                        <div class="checkbox-nice">
                          <input type="checkbox" id="remember-me" checked="checked"/>
                          <label for="remember-me">
                            Запомни меня
                          </label>
                        </div>
                      </div>
                      <a href="#" id="login-forget-link" class="col-xs-6">
                        Забыли пароль?
                      </a>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-12">
                      <button type="submit" class="btn btn-success col-xs-12">Вход</button>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-12">
                      <p class="social-text">Или воспользуйтесь аккаунтом</p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-xs-12 col-sm-6">
                      <button type="submit" class="btn btn-primary col-xs-12 btn-facebook">
                        <i class="fa fa-facebook"></i> facebook
                      </button>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                      <button type="submit" class="btn btn-primary col-xs-12 btn-twitter">
                        <i class="fa fa-twitter"></i> Twitter
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
